@model List<TasteFoodIt.Entities.Chef>
@{
    ViewBag.Title = "ChefList";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="row">
    <div class="col-lg-12 mb-4">
        <!-- Simple Tables -->
        <div class="card">
            <div class="card-header py-3 d-flex flex-row align-items-center justify-content-between">
                <h6 class="m-0 font-weight-bold text-primary">Simple Tables</h6>
            </div>
            <div class="table-responsive">
                <table class="table align-items-center table-flush">
                    <thead class="thead-light">
                        <tr>
                            <th>Şef Id</th>
                            <th>Fotoğraf</th>
                            <th>Şef isim soyisim</th>
                            <th>Açıklama</th>
                            <th>Pozisyonu</th>
                            <th>Sil</th>
                            <th>Güncelle</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@item.ID</td>
                                <td><img src="@item.ImageUrl" alt="@item.Title" width="100" height="100" /></td>
                                <td>@item.NameSurname</td>
                                <td>@item.Description</td>
                                <td>@item.Title</td>
                                <td><a href="/ChefController/DeleteChef/@item.ID" class="btn btn-danger">Sil</a></td>
                                <td><a href="/ChefController/UpdateChef/@item.ID" class="btn btn-success">Güncelle</a></td>
                            </tr>
                        }
                    </tbody>
                </table>
                <a href="/Category/CreateCategory/" class="btn btn-primary">Yeni Şef</a>
            </div>
            <div class="card-footer"></div>
        </div>
    </div>
</div>

