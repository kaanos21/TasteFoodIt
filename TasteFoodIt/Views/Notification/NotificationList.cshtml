@model List<TasteFoodIt.Entities.Notification>
@{
    ViewBag.Title = "NotificationList";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="container-fluid" id="container-wrapper">
    <div class="d-sm-flex align-items-center justify-content-between mb-4">
        <h1 class="h3 mb-0 text-gray-800">Kategori Listesi</h1>
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="./">Ana Sayfa</a></li>
            <li class="breadcrumb-item">Kategoriler</li>
            <li class="breadcrumb-item active" aria-current="page">Kategori İşlemleri</li>
        </ol>
    </div>

    <div class="row">
        <div class="col-lg-12 mb-4">
            <!-- Simple Tables -->
            <div class="card">
                <div class="card-header py-3 d-flex flex-row align-items-center justify-content-between">
                    <h6 class="m-0 font-weight-bold text-primary">Simple Tables</h6>
                </div>
                <div class="table-responsive">
                    <table class="table align-items-center table-flush">
                        <thead class="thead-light">
                            <tr>
                                <th>Kategori Id</th>
                                <th>Kategori Adı</th>
                                <th>Okunma Durumu</th>
                                <th>Sil</th>
                                <th>Güncelle</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                            <tr>
                                <td>@item.NotificationId</td>
                                <td>@item.Description</td>
                                @if (item.IsRead == true)
                                {
                                    <td><a href="/Notification/NotificationIsReadChangeToFalse/@item.NotificationId" class="btn btn-warning">Okunmadı Olarak İşaretle</a></td>
                                }
                                else
                                {
                                    <td><a href="/Notification/NotificationIsReadChangeToTrue/@item.NotificationId" class="btn btn-dark">Okundu Olarak İşaretle</a></td>
                                }
                                <td><a href="/Category/DeleteCategory/@item.NotificationId" class="btn btn-danger">Sil</a></td>
                                <td><a href="/Category/UpdateCategory/@item.NotificationId" class="btn btn-success">Güncelle</a></td>
                            </tr>
                            }
                        </tbody>
                    </table>
                    <a href="/Category/CreateCategory/" class="btn btn-primary">Yeni Kategori Girişi</a>
                </div>
                <div class="card-footer"></div>
            </div>
        </div>
    </div>
    <!--Row-->
    <!-- Modal Logout -->
</div>

