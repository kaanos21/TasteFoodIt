@model List<TasteFoodIt.Entities.Notification> 
@{
    ViewBag.Title = "NotificationList";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="row">
    <div class="col-lg-12 mb-4">
        <!-- Simple Tables -->
        <div class="card">
            <div class="card-header py-3 d-flex flex-row align-items-center justify-content-between">
                <h6 class="m-0 font-weight-bold text-primary">Mesaj Listesi</h6>
            </div>
            <div class="table-responsive">
                <table class="table align-items-center table-flush">
                    <thead class="thead-light">
                        <tr>
                            <th>Id</th>
                            <th>Mesaj</th>
                            <th>Tarihi</th>
                            <th>Okunup Okunmadığı</th>
                            <th>Sil</th>
                            <th>Güncelle</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@item.NotificationId</td>
                                <td>@item.Description</td>                              
                                <td>@item.Date</td>
                                <td>@item.IsRead</td>
                                <td><a href="/AdminNotification/DeleteNotification/@item.NotificationId" class="btn btn-danger">Sil</a></td>
                                <td><a href="/AdminNotification/UpdateNotification/@item.NotificationId" class="btn btn-success">Güncelle</a></td>
                            </tr>
                        }
                    </tbody>
                </table>
                <a href="/Category/CreateCategory/" class="btn btn-primary">Yeni Şef</a>
            </div>
            <div class="card-footer"></div>
        </div>
    </div>
</div>

