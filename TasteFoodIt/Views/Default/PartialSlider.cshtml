@model List<TasteFoodIt.Entities.Slider>
<section class="hero-wrap">
    <div class="home-slider owl-carousel js-fullheight">
        @foreach (var x in Model)
        {
            <div class="slider-item js-fullheight" style="background-image: url(@x.SliderImage);">
                <div class="overlay"></div>
                <div class="container">
                    <div class="row no-gutters slider-text js-fullheight align-items-center justify-content-center">
                        <div class="col-md-12 ftco-animate">
                            <div class="text w-100 mt-5 text-center">
                                <h2 class="subheading">Taste.it Restaurant</h2>
                                <h1>Kuruluş Yılımız</h1>
                                <h2 class="subheading-2">1958</h2>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</section>


